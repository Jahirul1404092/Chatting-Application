<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="#A30303"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/dialog_name_Id"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Contact Name"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_marginTop="90dp"/>

        <TextView
            android:id="@+id/dialog_phone_Id"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Phone No."
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/dialog_call_btn_Id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@android:color/white"
            android:drawableLeft="@drawable/ic_call"
            android:drawablePadding="20dp"
            android:padding="20dp"
            android:text="Call"
            android:textAlignment="textStart"
            android:enabled="false"/>

       <Button
            android:id="@+id/dialog_msg_btn_Id"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@android:color/white"
            android:text="Use messenger"
            android:drawableLeft="@drawable/ic_message"
            android:drawablePadding="20dp"
            android:textAlignment="textStart"
            android:padding="20dp"
           android:enabled="false"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/dialog_image_Id"
        android:layout_height="140dp"
        android:layout_width="140dp"
        android:src="@drawable/male"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:background="#ffffff"
        android:layout_marginBottom="10dp"/>

</RelativeLayout>